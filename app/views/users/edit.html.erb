<html>
  <head>
    <title>We Out - Your place to find the hippest events near you!</title> 

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    
    <style>
      body{
        background: url(https://images.unsplash.com/photo-1533619043865-1c2e2f32ff2f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1550&q=80);
        background-color: #444;
        background: url(https://images.unsplash.com/photo-1533619043865-1c2e2f32ff2f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1550&q=80);    
      }
      .vertical-offset-100{
        padding-top:100px;
      }

    </style>
  </head>
  <body>
    <div class="container">
        <div class="row vertical-offset-100">
          <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <center><h3 class="panel-title">Edit Your Profile</h3></center>
              </div>
              <div class="panel-body">

              
              <fieldset>
              
              <%= form_for @user do |f| %>

                <div class="form-group">
                    <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
                </div>

                <div class="form-group">
                    <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
                </div>

                <div class="form-group">
                    <%= f.text_field :username, class: 'form-control', placeholder: "Username" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
                </div>
                

                <% if flash[:errors] %>
              <div class="alert alert-danger" role="alert">
              <ul>
                <% flash[:errors].each do |error| %>
                  <li class="error"><%= error %></li>
                <% end %>
              </ul>
              </div>
          <% end %>


                <div class="form-group">
                    <%= f.submit "Update", class: "btn btn-lg btn-success btn-block" %>
                </div>
            <% end %>

             <%= button_to "Delete my profile", user_path(@current_user), method: :delete, class: "btn btn-lg btn-danger btn-block", data: { confirm: "Are you sure?" }  %>
                <br>
                <center><%= link_to "Cancel", user_path(@current_user) %></center>

              </fieldset>


              </div>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>