<h1> Welcome <%=@user.first_name%> </h1>
<hr>
<%= button_to "Add an event", new_event_path, method: :get %>
<%= button_to "Remove an event", events_path, method: :get %> 

<% if @user.events != [] %>
<h3>Your Events</h3>
    <ul>
        <% @user.events.each do |event| %>
            <li><%= event.title %></li>
        <% end %>
    </ul>
<% end %>
