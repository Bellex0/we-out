<html>
  <head>
    <title>We Out - Your place to find the hippest events near you!</title> 

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://fonts.googleapis.com/css?family=Farro&display=swap" rel="stylesheet">
    
    <style>
      body{
        background: url(https://images.unsplash.com/photo-1460451330947-331de664bf35?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1550&q=80);
        background-color: #444; 
      }
      .vertical-offset-100{
        padding-top:100px;
      }
      h2 {
        color: teal;
        font-family: 'Farro', cursive;
        font-size: 200%;
        animation: blur .75s
      }
      .panel-title {
        padding-top:10px;
      }

    </style>
  </head>
  <body>
    <div class="container">
        <div class="row vertical-offset-100">
          <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <center><h2 class="panel-title">Add a new event</h2></center>
              </div>
              <div class="panel-body">
              
              <h2>
              <%= form_for @event do |f| %>
                <div class="form-group">
                    <%= f.text_field :title, class: 'form-control', placeholder: "Title of Event" %>
                </div>

                <div class="form-group">
                    <%= f.date_field :event_date, class: 'form-control' %>
                </div>

                <div class="form-group form-control" style="border:0;">
                    <%= f.collection_select :location_id, @locations, :id, :city %>
                </div>

                <div class="form-group form-control" style="border:0;">
                    <%= f.collection_select :category_id, @categories, :id, :name %>
                </div>

                <div class="form-group">
                    <%= f.text_area :content, class: 'form-control', placeholder: "Write a description here..." %>
                </div>
                

                <% if flash[:errors] %>
              <div class="alert alert-danger" role="alert">
              <ul>
                <% flash[:errors].each do |error| %>
                  <li class="error"><%= error %></li>
                <% end %>
              </ul>
              </div>
          <% end %>
          </h2>
                <div class="form-group">
                    <h2><%= f.submit "Create event", class: "btn btn-md btn-success btn-block" %></h2>
                    <h2><center><%= link_to "Back to my profile", user_path(@current_user), class: "btn btn-md btn-warning btn-block"  %></center></h2>
                </div>
            <% end %>


              </div>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>