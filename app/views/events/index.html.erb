<html>
    <head>
        <title>We Out - Your place to find the hippest events near you!</title> 
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        
        <style>
            body{
                background: url(https://images.unsplash.com/photo-1456743625079-86a97ff8bc86?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1550&q=80);
                background-color: #444;
            }
            .vertical-offset-100{
                padding-top:100px;
            }
        </style>
    </head>
     <body>
        <div class="container">
            <div class="row vertical-offset-100">
                <div class="col-md-10 col-md-offset-1">

                    <%= @events.each do |event| %>
                        <div class="panel panel-default">
                            <div class="panel-heading"><center><h1 class="panel-title"><%= link_to event.title, event_path(event) %></h1></center></div>
                            <div class="panel-body">
                                Location: <%= event.location.city %>
                                <br><br>
                                <p><h4><%= event.content %></h4></p>
                            </div>
                        </div>
                    <% end %>

                </div>
            </div>
        </div>
    </body>
</html>