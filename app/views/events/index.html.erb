<h1> See events all over the world 🌎 </h1>
<hr>
<%= button_to "Back to my Profile", user_path(@current_user), method: :get %>
<ul>
    <% @events.each do |event| %>
        <li>
        <%= link_to event.title, event_path(event) %> - 📍 <%= event.location.city %>
        </li>
    <% end %>
</ul>

<%= button_to "Search by location", locations_path, method: :get%>
<%= button_to "Search by category", categories_path, method: :get%>