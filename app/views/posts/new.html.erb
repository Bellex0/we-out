<center><h1>Add a new post</h1></center>
<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for @post do |f| %>
            <div class="form-group">
                <%= f.label :content %>
                <%= f.text_field :content, class: 'form-control'%>
            </div>

            <%= f.submit "Create my post", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>